<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workout_fragment"
    tools:context="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.WorkoutFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:descendantFocusability="afterDescendants"
            android:windowSoftInputMode="adjustPan" />


        <ProgressBar
            android:id="@+id/timeProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_below="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:progress="0" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="Start" />

        <EditText
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/timeProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:text="Enter Time in MM:SS"
            android:inputType="time"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:checked="true"
            android:text="Hide Time Intervals" />

        <Chronometer
            android:id="@+id/chronometer2"
            android:layout_width="45dp"
            android:layout_height="23dp"
            android:layout_above="@+id/timeProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="11dp"
            android:textAlignment="center"
            android:visibility="invisible" />
    </RelativeLayout>

</FrameLayout>
