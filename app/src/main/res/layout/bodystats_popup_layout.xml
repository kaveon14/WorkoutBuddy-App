<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bodyStats_popupWindow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bodystatsPopup_textView"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:background="@android:color/white"
        android:textColor="@color/caldroid_black" />

    <Button
        android:id="@+id/bodyStats_yes_popupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:layout_marginEnd="37dp"
        android:layout_below="@+id/bodystatsPopup_textView"
        android:layout_alignBaseline="@+id/bodyStats_no_popupBtn"
        android:layout_alignBottom="@+id/bodyStats_no_popupBtn"
        android:layout_toStartOf="@+id/bodyStats_no_popupBtn" />

    <Button
        android:id="@+id/bodyStats_no_popupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:layout_marginEnd="45dp"
        android:layout_below="@+id/bodystatsPopup_textView"
        android:layout_alignEnd="@+id/bodystatsPopup_textView"
        android:layout_marginTop="19dp" />
</RelativeLayout>
