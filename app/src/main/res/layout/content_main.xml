<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kaveon14.workoutbuddy.Activity.MainActivity"
    tools:showIn="@layout/app_bar_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.ExerciseFragment"
        android:id="@+id/exercise_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.MainWorkoutFragment"
        android:id="@+id/mainWorkout_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.SubWorkoutFragment"
        android:id="@+id/subWorkout_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.BlankExerciseFragment"
        android:id="@+id/blankExercise_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.BlankSubWorkoutFragment"
        android:id="@+id/blankWorkout_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.CalenderFragment"
        android:id="@+id/calendar_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />
    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.BodyStatsFragment"
        android:id="@+id/bodyStats_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.MainFragments.WorkoutStatsFragment"
        android:id="@+id/workoutStats_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.WorkoutFragment"
        android:id="@+id/workout_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.FullWorkoutStatsFragment"
        android:id="@+id/fullWorkoutStats_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        class="com.example.kaveon14.workoutbuddy.Fragments.SubFragments.TestCalenderFragment"
        android:id="@+id/test_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" >

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardBackgroundColor="@color/caldroid_black"
                    app:cardCornerRadius="0dp" />

                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    app:cardBackgroundColor="@color/caldroid_darker_gray"
                    app:cardCornerRadius="0dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="500dp" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/no_image" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <android.support.v7.widget.CardView
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_width="200dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    app:cardCornerRadius="0dp"/>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/caldroid_gray"
                    android:layout_width="125dp"
                    android:layout_height="200dp" />

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/caldroid_holo_blue_light"
                    android:layout_width="125dp"
                    android:layout_height="200dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="125dp"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/caldroid_light_red" />

            </TableRow>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
