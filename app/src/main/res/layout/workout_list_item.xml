<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/workoutListItem">

    <TextView
        android:id="@+id/setsTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textAlignment="viewEnd"
        android:text="Set#"
        android:layout_alignBaseline="@+id/setsEditText"
        android:layout_alignBottom="@+id/setsEditText"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/setsEditText"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="reps/weight lbs/kg"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/setsTextView"
        android:layout_marginStart="18dp" />
</RelativeLayout>
