    android:layout_height="wrap_content"
    android:id="@+id/deleteSubWorkoutPopup">

    <ListView
        android:id="@+id/deleteSubWorkoutPopup_listView"
        android:layout_width="250dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deleteSubWorkout"
        android:layout_below="@+id/deleteSubWorkoutPopup_listView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
