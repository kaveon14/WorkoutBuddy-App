<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addExercise_PopupWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/addExercisePopup_imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/addExercisePopup_DescriptionEditText"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:gravity="top"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addExercisePopup_NameEditText"
        android:background="@android:color/white"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addExercisePopupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:layout_below="@+id/addExercisePopup_DescriptionEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/addExercisePopup_NameEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addExercisePopup_imageView"
        android:layout_below="@+id/addExercisePopup_imageView"
        android:ems="10"
        android:background="@android:color/white"
        android:inputType="textPersonName"
        android:text="Exercise Name:" />

</RelativeLayout>
