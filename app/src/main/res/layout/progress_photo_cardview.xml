<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">



    <android.support.v7.widget.CardView
        android:id="@+id/progressPhotoCardView"
        android:layout_width="@dimen/nav_header_height"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/progressPhotoImageView"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    card_view:srcCompat="@mipmap/no_image" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    card_view:srcCompat="@drawable/ic_date" />

                <TextView
                    android:id="@+id/progressPhotoDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textColor="@color/caldroid_black" />

            </TableRow>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>